{
  "name": "@tolgee/core",
  "version": "4.9.2",
  "description": "Library providing ability to translate messages directly in context of developed application.",
  "main": "index.js",
  "module": "./dist/tolgee.esm.mjs",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tolgee/tolgee-js"
  },
  "homepage": "https://tolgee.io",
  "keywords": [
    "localization",
    "internationalization",
    "l10n",
    "i18n",
    "translation",
    "languages"
  ],
  "declaration": true,
  "directories": {
    "lib": "lib",
    "dist": "dist"
  },
  "scripts": {
    "build": "rollup -c rollup.config.js && tsc --declaration --emitDeclarationOnly",
    "clean": "rm -rf dist lib",
    "test": "jest",
    "develop": "concurrently \"rollup -c rollup.config.js -w\" \"tsc --watch --preserveWatchOutput --declaration --emitDeclarationOnly\" ",
    "tsc": "tsc --noEmit"
  },
  "author": "Tolgee",
  "license": "MIT",
  "files": [
    "lib/**/*",
    "dist/**/*",
    "src/**/*"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "8.3.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.8",
    "concurrently": "7.3.0",
    "jest": "^27.2.4",
    "jest-fetch-mock": "^3.0.3",
    "rollup": "^2.56.3",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.7.4"
  }
}
