{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "es2020",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "downlevelIteration": true,
    "paths": {}
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
